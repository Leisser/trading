# Production Environment Variables
# Copy this file to .env on your production server

# Database
POSTGRES_DB=fluxor_prod
POSTGRES_USER=fluxor
POSTGRES_PASSWORD=your_secure_password_here

# Django
SECRET_KEY=your_secret_key_here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com,http://localhost:5173,http://localhost:3001

# Frontend
VITE_API_BASE_URL=https://your-domain.com/api
VITE_WS_BASE_URL=wss://your-domain.com/ws

# Email (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Firebase (production)
FIREBASE_ADMIN_SDK_CONFIG=/app/firebase-service-account.json

# Redis
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO

# Security
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Session
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
