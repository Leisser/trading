# =================================
# FLUXOR TRADING API CONFIGURATION
# =================================

# ==================
# DJANGO CORE SETTINGS
# ==================
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================
# DATABASE CONFIGURATION
# ==================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fluxor_api
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ==================
# REDIS CONFIGURATION
# ==================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================
# CELERY CONFIGURATION
# ==================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================
# SECURITY SETTINGS
# ==================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==================
# JWT CONFIGURATION
# ==================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 days in seconds

# ==================
# EMAIL CONFIGURATION
# ==================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@fluxor.com

# ==================
# CRYPTOCURRENCY SETTINGS
# ==================
BITCOIN_NETWORK=testnet  # mainnet or testnet
ETHEREUM_NETWORK=ropsten  # mainnet, ropsten, etc.
COMPANY_WALLET_LABEL=company_wallet

# Encryption key for private keys (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
CRYPTO_ENCRYPTION_KEY=your-encryption-key-for-private-keys

# ==================
# EXCHANGE API KEYS
# ==================

# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=True

# Coinbase Pro
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_SANDBOX=True

# Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_SECRET_KEY=your-kraken-secret-key

# ==================
# BLOCKCHAIN RPC ENDPOINTS
# ==================
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=your-bitcoin-rpc-password

ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_RPC_KEY=your-infura-or-alchemy-key

# ==================
# PRICE DATA PROVIDERS
# ==================

# CoinGecko
COINGECKO_API_KEY=your-coingecko-api-key

# CoinMarketCap
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Alpha Vantage
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key

# ==================
# PAYMENT GATEWAYS
# ==================

# Coinbase Commerce
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-commerce-webhook-secret

# NOWPayments
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret

# BitPay
BITPAY_API_KEY=your-bitpay-api-key
BITPAY_PRIVATE_KEY_PATH=/path/to/bitpay/private.key

# BTCPay Server
BTCPAY_SERVER_URL=https://your-btcpay-server.com
BTCPAY_API_KEY=your-btcpay-api-key

# ==================
# TRADING CONFIGURATION
# ==================
DEFAULT_EXCHANGE=binance
TRADING_ENABLED=True
PAPER_TRADING=True  # Set to False for live trading

# Price update intervals (seconds)
PRICE_UPDATE_INTERVAL=5
ORDERBOOK_UPDATE_INTERVAL=2
TRADE_UPDATE_INTERVAL=1

# ==================
# RISK MANAGEMENT
# ==================
MAX_POSITION_SIZE=10000  # USD
MAX_LEVERAGE=10
MAX_DAILY_LOSS=1000  # USD
MAX_DAILY_VOLUME=50000  # USD
MAX_OPEN_POSITIONS=5
MIN_MARGIN_REQUIREMENT=0.1  # 10%
LIQUIDATION_THRESHOLD=0.05  # 5%
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# ==================
# COMPLIANCE SETTINGS
# ==================
KYC_REQUIRED_AMOUNT=1000  # USD
SUSPICIOUS_AMOUNT=10000  # USD
REPORTING_THRESHOLD=5000  # USD
AML_CHECK_INTERVAL=3600  # 1 hour in seconds

# ==================
# MONITORING & LOGGING
# ==================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=100  # MB
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-url

# ==================
# SOCIAL AUTH (Optional)
# ==================
GOOGLE_OAUTH2_KEY=your-google-oauth2-key
GOOGLE_OAUTH2_SECRET=your-google-oauth2-secret

GITHUB_KEY=your-github-oauth-key
GITHUB_SECRET=your-github-oauth-secret

# ==================
# AWS/CLOUD STORAGE (Optional)
# ==================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ==================
# TELEGRAM BOT (Optional)
# ==================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==================
# THIRD-PARTY INTEGRATIONS
# ==================

# TradingView
TRADINGVIEW_WEBHOOK_SECRET=your-tradingview-webhook-secret

# 1inch DEX Aggregator
ONEINCH_API_KEY=your-1inch-api-key

# Uniswap
UNISWAP_API_KEY=your-uniswap-api-key

# ==================
# FEATURE FLAGS
# ==================
ENABLE_WEBSOCKETS=True
ENABLE_CELERY_BEAT=True
ENABLE_RATE_LIMITING=True
ENABLE_API_DOCUMENTATION=True
ENABLE_ADMIN_INTERFACE=True
ENABLE_DEBUG_TOOLBAR=False

# ==================
# PERFORMANCE SETTINGS
# ==================
DATABASE_CONN_MAX_AGE=600  # 10 minutes
CACHE_TIMEOUT=300  # 5 minutes
API_THROTTLE_RATE=100/min

# ==================
# DEVELOPMENT SETTINGS
# ==================
FIXTURE_DIRS=fixtures/
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# ==================
# TESTING CONFIGURATION
# ==================
TEST_RUNNER=pytest_django
TEST_DATABASE_ENGINE=django.db.backends.sqlite3